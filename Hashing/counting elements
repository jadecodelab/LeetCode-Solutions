#Given an integer array arr, count how many elements x there are, 
#such that x + 1 is also in arr. If there are duplicates in arr, count them separately.

def countElements(arr: List[int]) -> int:
        hash_set = set(arr)
        count = 0
        for n in arr:
            if n+1 in hash_set:
                count += 1            
        return count
  
  #Time complexity: O(n)
  #Space complexity: O(n)
