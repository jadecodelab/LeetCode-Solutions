# Given a 0-indexed string word and a character ch, 
# reverse the segment of word that starts at index 0 
# and ends at the index of the first occurrence of ch (inclusive). 
# If the character ch does not exist in word, do nothing.

class Solution:
    def reversePrefix(self, word: str, ch: str) -> str:
        # find index of the first occurence of ch
        right = word.find(ch)
        if right == -1:
            return word
 
        # convert string to list of characters
        chars = list(word)
        left = 0
        # reverse the characters in word from begining to where ch is at
        while left < right:
            chars[left],chars[right] = chars[right],chars[left]
            left += 1
            right -= 1 
        
        return "".join(chars)
